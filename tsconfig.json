{
  "compilerOptions": {
    /* Output -------------------------------------------------- */
    "outDir": "./dist",
    "rootDir": "./src",
    "sourceMap": true,

    /* Language & module -------------------------------------- */
    "target": "ESNext",          // matches Node 22 feature set
    "module": "NodeNext",        // keeps native ESM semantics
    "moduleResolution": "nodenext",

    /* Strictness & ergonomics -------------------------------- */
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"]
}
